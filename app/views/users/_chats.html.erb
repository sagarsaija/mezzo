<% @chats.each do |chats| %>
    <% if current_user.id == chats.user_id %>
        <li class="media comment" id="myMsg">
          <%= link_to image_tag(chats.user.image, alt: chats.user.name, class: "media-object"),
                      user_path(chats.user_id), target: '_blank', class: 'pull-right' %>
          <div class="media-body" id="message">
            <h4 class="media-heading"><%= link_to chats.user.name, user_path(chats.user_id), target: '_blank' %>
              <small class="text-muted"> <%= chats.created_at.strftime('%-d %B %Y, %H:%M:%S') %></small></h4>
            <p><%= chats.body %></p>
          </div>
        </li>
    <% else %>
        <li class="media comment" id="matchMsg">
          <%= link_to image_tag(chats.user.image, alt: chats.user.name, class: "media-object"),
                      user_path(chats.user_id), target: '_blank', class: 'pull-left' %>
          <div class="media-body">
            <h4 class="media-heading"><%= link_to chats.user.name, user_path(chats.user_id), target: '_blank' %>
              <small class="text-muted"> <%= chats.created_at.strftime('%-d %B %Y, %H:%M:%S') %></small></h4>
            <p><%= chats.body %></p>
          </div>
        </li>
    <% end %>
<% end %>